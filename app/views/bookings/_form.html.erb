<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
    <%= simple_form_for [@hooker, @booking] do |f| %>

        <%= f.input :start_date, placeholder: "16/08/2016" %>
        <%= f.input :end_date, placeholder: "16/08/2016"%>
        <%= f.input :special, placeholder: "Little mermaid"  %>
        <div class="text-center">
        <%= f.submit "Enjoy", class: "btn btn-primary" %>
        <%= link_to "Back to hooker", hooker_path(@hooker), class: "btn btn-primary" %>
        </div>
    <% end %>
    </div>
  </div>
</div>

