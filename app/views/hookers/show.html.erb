
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="thumbnail">
        <div class="col-xs-10 col-xs-offset-1 text-center">
          <%= image_tag @hooker.profile_picture, height: 300, style: "margin: 20px;" %>
        </div>
        <div class="caption">
            <h3><%= @hooker.name %> <small><%= @hooker.short_description %></small></h3>
            <p>
                <%= @hooker.long_description %>
            </p>
            <div class="list-group">
              <div class="list-group-item">
                <i class="fa fa-home" aria-hidden="true"></i>  <span><%= @hooker.street %> <%= @hooker.street_nr %> <%= @hooker.postal_code %> <%= @hooker.city %></span>
              </div>
              <div class="list-group-item">
                <i class="fa fa-money" aria-hidden="true"></i>
                <strong class="text"><%= @hooker.price %> â‚¬ </strong>/ hour
              </div>
            </div>

          <p>
            <%= link_to "Book me!", new_hooker_booking_path(@hooker), class: "btn btn-danger" %>
            <%= link_to "Write me a review!", new_hooker_review_path(@hooker), class: "btn btn-danger" %>
          </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- reviews -->
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1" >
      <% @hooker.reviews.each do |review| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <%= review.title %>
              <div class="pull-right">
                <% review.rating.times do %>
                  <i class="fa fa-heart" aria-hidden="true"></i>
                <% end %>
                <% (5-review.rating).times do %>
                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <p>
              <%= review.content %>
            </p>
            <div class="label label-warning pull-left">
              <%= review.user.username %>
            </div>
            <div class="label label-success pull-right">
              <%= review.created_at.to_date %>
              <% if review.created_at != review.updated_at %>
                <small>Updated</small>
              <% end %>
            </div>
          </div>
          <% if current_user == review.user %>
            <div class="panel-footer">
              <%= link_to edit_review_path(review) do %>
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i> update
              <% end %>
              <%= link_to review_path(review), method: :delete, class: "pull-right" do %>
                delete <i class="fa fa-trash-o" aria-hidden="true"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- end reviews -->
</div>
