
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 well">
        <%= image_tag @hooker.profile_picture, height: 300, style: "margin: 20px;" %>
        <div class="caption">
          <h3><%= @hooker.name %> <small><%= @hooker.short_description %></small></h3>
          <p>
            <%= @hooker.long_description %>
          </p>
          <div class="well">
          <i class="fa fa-home" aria-hidden="true"></i>
          <span>
            <%= @hooker.address %>
          </span>
          <span class="pull-right">
            <i class="fa fa-money" aria-hidden="true"></i>
            <strong class="text">
              <%= @hooker.price %> â‚¬
            </strong>/ hour
          </span>
        </div>
        <p>
          <%= link_to "Book me!", new_hooker_booking_path(@hooker), class: "btn btn-danger" %>
          <% if current_user == @hooker.user %>
            <span class="pull-right">
              <%= link_to edit_hooker_path(@hooker), class: "btn btn-primary" do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
              Edit hooker
              <% end %>
              <%= link_to hooker_path(@hooker), method: :delete, class: "btn btn-primary" do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete hooker
              <% end %>
            </span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <!-- show reviews -->
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1" id="reviews">
      <% @hooker.reviews.each do |review| %>
        <%= render 'reviews/show', hooker: @hooker, review: review %>
      <% end %>
    </div>
  </div>
  <!-- end reviews -->
  <!-- reviews form inside the hooker#show -->
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 well" >
    <h4>Write me a review</h4>
      <%= render 'reviews/form', hooker: @hooker, review: @review %>
    </div>
  </div>
  <!-- end reviews form -->
</div>


